# XEUR.AI Platform Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="XEUR.AI Platform"
NEXT_PUBLIC_APP_DESCRIPTION="Revolutionary AI-powered game development platform"

# =============================================================================
# XEUR.AI API CONFIGURATION
# =============================================================================
# Main XEUR.AI API endpoints
NEXT_PUBLIC_XEUR_API_URL=https://api.xeur.ai
XEUR_API_KEY=your_xeur_api_key_here
XEUR_API_SECRET=your_xeur_api_secret_here

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# XEUR LLM Core Configuration
XEUR_LLM_ENDPOINT=https://llm.xeur.ai
XEUR_MODEL_VERSION=v1.2.0

# Specialized AI Models
EUREKA_MODEL_KEY=your_eureka_model_key
GALILEO_MODEL_KEY=your_galileo_model_key
NEWTON_MODEL_KEY=your_newton_model_key
FARADAY_MODEL_KEY=your_faraday_model_key
CURIE_MODEL_KEY=your_curie_model_key
ALBERT_MODEL_KEY=your_albert_model_key
HAWKING_MODEL_KEY=your_hawking_model_key
RAMANUJAN_MODEL_KEY=your_ramanujan_model_key
RATAN_MODEL_KEY=your_ratan_model_key

# =============================================================================
# THIRD-PARTY AI SERVICES
# =============================================================================
# Google AI (Gemini API)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL_NAME=gemini-pro

# OpenAI (Backup/Complementary)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CLOUD INFRASTRUCTURE
# =============================================================================
# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=xeur-ai-platform
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# NVIDIA DGX Cloud (if approved)
NVIDIA_DGX_API_KEY=your_nvidia_dgx_api_key
NVIDIA_DGX_ENDPOINT=https://api.dgx.nvidia.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database
DATABASE_URL=postgresql://username:password@localhost:5432/xeur_ai_platform
DATABASE_POOL_SIZE=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@xeur.ai

# Notification Services
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# PAYMENT & BILLING
# =============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=xeur-ai
SENTRY_PROJECT=platform

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug modes
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_AI_DEBUGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# WEB3 & BLOCKCHAIN CONFIGURATION
# =============================================================================
# XEUR Connect Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
XEUR_CONNECT_CONTRACT_ADDRESS=0x...
XEUR_CONNECT_PRIVATE_KEY=your_private_key_here

# NFT Marketplace
NFT_MARKETPLACE_URL=https://marketplace.xeur.ai
NFT_CONTRACT_ADDRESS=0x...

# =============================================================================
# RATE LIMITING & QUOTAS
# =============================================================================
# API Rate Limits
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Generation Quotas
FREE_TIER_GENERATIONS_PER_DAY=3
PRO_TIER_GENERATIONS_PER_DAY=50
ENTERPRISE_TIER_GENERATIONS_PER_DAY=unlimited

# =============================================================================
# ASSET STORAGE
# =============================================================================
# Cloud Storage for Generated Assets
AWS_S3_BUCKET=xeur-ai-generated-assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.xeur.ai
CDN_API_KEY=your_cdn_api_key

# =============================================================================
# INTERNAL TOOLS & INTEGRATIONS
# =============================================================================
# Internal Documentation
INTERNAL_DOCS_URL=https://docs.internal.xeur.ai

# Team Communication
INTERNAL_SLACK_TOKEN=xoxb-your-internal-slack-token

# Project Management
NOTION_TOKEN=secret_your_notion_token
NOTION_DATABASE_ID=your_notion_database_id